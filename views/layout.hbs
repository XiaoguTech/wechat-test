<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.bootcss.com/semantic-ui/2.2.13/semantic.min.css">
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>    
    <script src="https://cdn.bootcss.com/semantic-ui/2.2.13/semantic.min.js"></script>
  </head>
  <body>
    <!-- Sidebar Menu -->
    <div class="ui vertical inverted sidebar menu">
      <a class="active item" href="/">首页</a>
			{{#if normalMenu}}
				<div class="item">
          <div class="header">
            监控
          </div>
          <div class="menu">
            {{#each normalMenu}}
							<a class="item" href="/metric/monitor/{{this.category_id}}">{{this.category_name}}</a>
						{{/each}}
          </div>
				</div>
			{{else}}
					<a class="item" href="/metric">监控</a>
			{{/if}}

			<a class="item" href="/metric/alert">报警</a>
      {{!-- {{#if alertMenu}}
        <div class="item">
          <div class="header">
            报警
          </div>
          <div class="menu">
              {{#each alertMenu}}
                <a class="item" href="/metric/alert/{{this.category}}">{{this.name}}</a>
              {{/each}}
          </div>
        </div>
      {{else}}
        <a class="item" href="/metric/alert">报警</a>
			{{/if}} --}}

      {{#if user}}
        <a class="item" href="/logout">注销</a>
      {{else}}
        <a class="item" href="/login">登录</a>
      {{/if}}
    </div>
    <div class="pusher">
          {{> navigation}}
          {{{body}}}
          {{> footer}}
    </div>

  </body>
</html>
